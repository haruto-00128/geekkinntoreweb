<h1>users#show</h1>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.tweets.each do |t| %>
  <%= t.user.name %>
  <%= t.body %>
<% end %>
<h3>保存した診断結果</h3>

<% @diagnoses.each do |d| %>
  <div class="card">
    <% Array(d.result).each do |menu| %>
        <p>・<%= menu %></p>
    <% end %>

    <small><%= d.created_at.strftime("%Y-%m-%d %H:%M") %></small>
  </div>
<% end %>

<p>
  <%= link_to "メニューを記入", new_post_path, class: "btn btn-primary" %>
</p>

<h2>投稿カレンダー</h2>

<%= month_calendar events: @events do |date, events| %>

  <!-- ★ 日付を表示（これが無いと空白になる） -->
  <div class="date-number"><%= date.day %></div>

  <% events.each do |event| %>
    <p><%= link_to event.title, post_path(event) %></p>
  <% end %>

<% end %>

<%= link_to "Tweet一覧に戻る", tweets_path %>

<% if @user.image.attached? %>
     <%= image_tag  @user.image, size: '250x200'%>
<% end %>