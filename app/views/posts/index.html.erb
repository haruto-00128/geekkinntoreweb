<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>

<%= month_calendar events: @events do |date, events| %>

  <!-- ★ 日付を必ず表示させる -->
  <div class="date-number"><%= date.day %></div>

  <% events.each do |event| %>
    <p><%= link_to event.title, event %></p>
  <% end %>

<% end %>